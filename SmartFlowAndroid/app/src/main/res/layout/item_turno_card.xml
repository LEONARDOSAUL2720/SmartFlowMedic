<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_turno"
    android:layout_width="280dp"
    android:layout_height="160dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/ll_turno_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header: Código de especialidad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_codigo_especialidad"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="A"
                android:gravity="center"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/circle_white_bg"
                android:backgroundTint="#FFFFFF"
                android:alpha="0.2"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nombre_especialidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cardiología"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_turno_actual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atendiendo: A-01"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.8"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:background="@android:color/white"
            android:alpha="0.3"/>

        <!-- Info: Personas en espera -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_people"
                app:tint="@android:color/white"
                android:alpha="0.9"/>

            <TextView
                android:id="@+id/tv_personas_espera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 personas en espera"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Info: Tiempo estimado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_clock"
                app:tint="@android:color/white"
                android:alpha="0.9"/>

            <TextView
                android:id="@+id/tv_tiempo_estimado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~60 min de espera"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
