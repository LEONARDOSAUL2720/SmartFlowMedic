<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Número de turno y hora -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <!-- Número de turno -->
            <TextView
                android:id="@+id/tv_numero_turno"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="12"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_gradient_card" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tv_hora_cita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:00 AM"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

                <TextView
                    android:id="@+id/tv_fecha_cita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17 de Noviembre, 2025"
                    android:textSize="13sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

            <!-- Badge de estado -->
            <TextView
                android:id="@+id/tv_estado_cita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmada"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_estado_confirmada"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:alpha="0.2"
            android:layout_marginBottom="12dp" />

        <!-- Información del Médico -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/iv_medico_fila"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_user_placeholder"
                android:contentDescription="Foto del médico" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tv_medico_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Juan Pérez"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

                <TextView
                    android:id="@+id/tv_especialidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cardiología"
                    android:textSize="13sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

            <!-- Código de especialidad con color -->
            <View
                android:id="@+id/view_codigo_especialidad"
                android:layout_width="6dp"
                android:layout_height="40dp"
                android:background="#F44336" />

        </LinearLayout>

        <!-- Información del Paciente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/iv_paciente_fila"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_user_placeholder"
                android:contentDescription="Foto del paciente" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paciente"
                    android:textSize="11sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_paciente_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leonardo Saul"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

            </LinearLayout>

        </LinearLayout>

        <!-- Motivo -->
        <TextView
            android:id="@+id/tv_motivo_cita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Motivo: Consulta de rutina"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
