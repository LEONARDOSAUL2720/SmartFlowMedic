<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <!-- Contenedor central tipo tarjeta -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Logo / espacio para icono -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher_round"
                android:contentDescription="Logo"
                android:scaleType="centerCrop"
                android:backgroundTint="@color/colorPrimary"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SmartFlow"
                android:textColor="@color/textPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inicia sesión o regístrate para gestionar tus consultas"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp" />

            <!-- Campos -->

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/edit_text"
                android:drawableStart="@mipmap/ic_launcher"
                android:hint="Correo electrónico"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/textPrimary" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:drawableStart="@mipmap/ic_launcher"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="@android:drawable/edit_text"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="8dp" />

            <!-- Botón principal login -->
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:text="Iniciar sesión"
                android:drawableLeft="@mipmap/ic_launcher"
                android:drawablePadding="12dp"
                android:stateListAnimator="@null" />

            <!-- Botón secundario registrar -->
            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/colorSecondary"
                android:textColor="@color/white"
                android:text="Crear cuenta"
                android:drawableLeft="@mipmap/ic_launcher"
                android:drawablePadding="12dp"
                android:stateListAnimator="@null" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#E0E0E0" />

            <!-- Sign in with Google -->
            <Button
                android:id="@+id/btn_google"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/textPrimary"
                android:text="Continuar con Google"
                android:drawableLeft="@mipmap/ic_launcher"
                android:drawablePadding="12dp"
                android:stateListAnimator="@null" />

            <TextView
                android:id="@+id/tv_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Al registrarte aceptas los términos y condiciones"
                android:textSize="12sp"
                android:textColor="@color/textPrimary"
                android:gravity="center"
                android:layout_marginTop="12dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Footer simple -->
    <TextView
        android:id="@+id/tv_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="© SmartFlow"
        android:textColor="@color/textPrimary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>