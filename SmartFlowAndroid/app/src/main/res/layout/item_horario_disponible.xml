<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_medico_horario"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_gradient_card">

        <!-- Header con foto mÃ©dico -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_medico_horario"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_user_placeholder"
                android:contentDescription="Foto mÃ©dico" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tv_medico_horario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Juan PÃ©rez"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv_especialidades_horario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CardiologÃ­a"
                    android:textSize="13sp"
                    android:textColor="#E0E0E0" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#40FFFFFF"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Horario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ•"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_horario_disponible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00 - 13:00"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Turnos en espera -->
        <TextView
            android:id="@+id/tv_turnos_espera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 personas en espera"
            android:textSize="13sp"
            android:textColor="#E0E0E0"
            android:layout_marginTop="4dp" />

        <!-- Tiempo estimado -->
        <TextView
            android:id="@+id/tv_tiempo_estimado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â± ~75 min"
            android:textSize="13sp"
            android:textColor="#FFD54F"
            android:layout_marginTop="2dp" />

        <!-- Disponibilidad -->
        <TextView
            android:id="@+id/tv_disponibilidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ… Disponible"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginTop="8dp"
            android:padding="6dp"
            android:background="@drawable/bg_disponibilidad" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
